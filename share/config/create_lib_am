#! /usr/bin/env bash
################################################################################
# Copyright (c) 2012 Los Alamos National Security, LLC
# All rights reserved.
################################################################################

# OS X sucks!
find_exec="find" && [ `uname` == "Darwin" ] && find_exec="find -E"
src_str=".*\.\(c*\|f90\)" && [ `uname` == "Darwin" ] && \
	src_str=".*\.(c*|f90)"

echo "################################################################################"
echo "# Phaze library Makefile.am"
echo "# THIS FILE WAS GENERATED BY config/bootstrap DO NOT EDIT"
echo "################################################################################"
echo

################################################################################
# General settings
################################################################################

echo "#------------------------------------------------------------------------------#"
echo "# General Settings"
echo "#------------------------------------------------------------------------------#"
echo
echo "lib_LTLIBRARIES = libphz.la"
echo
echo "AM_CPPFLAGS = -I\${top_srcdir}/src"
echo
echo "libphz_includedir = \${includedir}"

echo
echo "#------------------------------------------------------------------------------#"
echo "# Headers"
echo "#------------------------------------------------------------------------------#"
echo
echo "libphz_include_HEADERS = \\"

numfiles=`$find_exec src -type f -regex '.*\.h*' | wc -l`
cnt=1
for file in `$find_exec src -type f -regex '.*\.h*'` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "#------------------------------------------------------------------------------#"
echo "# Sources"
echo "#------------------------------------------------------------------------------#"
echo
echo "libphz_la_SOURCES = \\"

numfiles=`$find_exec src -type f -regex $src_str | wc -l`
cnt=1
for file in `$find_exec src -type f -regex $src_str | sort` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done
